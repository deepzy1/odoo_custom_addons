<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="mail_template_visitor_notification" model="mail.template">
            <field name="name">Visitor Notification</field>
            <field name="model_id" ref="visitor_management.model_visitor_record"/>
            <field name="subject">Visitor Scheduled: {{object.name}}</field>
            <field name="email_from">{{user.email}}</field>
            <field name="email_to">{{object.host.email}}</field>
            <field name="description">Sent to hosts when a visitor is scheduled.</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 12px;">
                        Hello<t t-out="object.host.name"/>,
                        <br/>
                        <br/>
                        You have a visitor scheduled:
                        <br/>
                    </p>
                    <ul>
                        <li>
                            <strong>Visitor Name:</strong>
                            <t t-out="object.name"/>
                        </li>
                        <li>
                            <strong>Phone:</strong>
                            <t t-out="object.phone"/>
                        </li>
                        <li>
                            <strong>Purpose:</strong>
                            <t t-out="object.purpose"/>
                        </li>
                        <li>
                            <strong>Visit Date:</strong>
                            <t t-out="object.visit_date"/>
                        </li>
                    </ul>
                    <br/>
                    Please be ready to welcome the visitor. If you need further details, feel free to reach out.
                    <br/>
                    <br/>
                    Thank you for your attention!
                    <br/>
                    Do not hesitate to contact us if you have any questions.
                    <br/>
                    <br/>


                </div>
            </field>
        </record>


    </data>
</odoo>
